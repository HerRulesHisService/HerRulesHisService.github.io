        <p class="disclaimer">This tool is designed for educational and negotiation purposes only. Always practice informed consent, communicate openly with partners, and prioritize safety in all BDSM activities.</p>
        <p>BDSM Checklist & Scene Negotiator &copy; 2023</p>
    </footer>

    <!-- Include html2canvas library for screenshot functionality -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab functionality
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const tabId = tab.getAttribute('data-tab');
                    
                    // Update active tab
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    
                    // Show active tab content
                    tabContents.forEach(content => {
                        content.classList.remove('active');
                        if (content.id === tabId) {
                            content.classList.add('active');
                        }
                    });
                });
            });
            
            // Preference selection
            const optionInputs = document.querySelectorAll('input[type="radio"]');
            let userPreferences = JSON.parse(localStorage.getItem('bdsmPreferences')) || {};
            
            // Load saved preferences
            function loadPreferences() {
                for (const activity in userPreferences) {
                    const preference = userPreferences[activity];
                    const input = document.querySelector(`input[name="${activity}"][value="${preference}"]`);
                    
                    if (input) {
                        input.checked = true;
                        input.parentElement.classList.add('selected');
                    }
                }
            }
            
            loadPreferences();
            
            // Handle preference selection
            optionInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const activity = this.name;
                    const preference = this.value;
                    
                    // Remove selected class from all labels for this activity
                    const activityLabels = document.querySelectorAll(`input[name="${activity}"]`);
                    activityLabels.forEach(labelInput => {
                        labelInput.parentElement.classList.remove('selected');
                    });
                    
                    // Add selected class to clicked label
                    this.parentElement.classList.add('selected');
                    
                    // Save preference
                    userPreferences[activity] = preference;
                });
            });
            
            // Save preferences
            document.getElementById('savePreferences').addEventListener('click', function() {
                localStorage.setItem('bdsmPreferences', JSON.stringify(userPreferences));
                alert('Your preferences have been saved!');
            });
            
            // Clear preferences
            document.getElementById('clearPreferences').addEventListener('click', function() {
                if (confirm('Are you sure you want to clear all your preferences?')) {
                    userPreferences = {};
                    localStorage.removeItem('bdsmPreferences');
                    optionInputs.forEach(input => {
                        input.checked = false;
                        input.parentElement.classList.remove('selected');
                    });
                    alert('All preferences have been cleared.');
                }
            });
            
            // Screenshot functionality
            document.getElementById('screenshotBtn').addEventListener('click', function() {
                html2canvas(document.querySelector('#checklist')).then(canvas => {
                    const link = document.createElement('a');
                    link.download = 'bdsm-checklist.png';
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                });
            });
            
            // Export preferences
            document.getElementById('exportPreferences').addEventListener('click', function() {
                if (Object.keys(userPreferences).length === 0) {
                    alert('Please complete your checklist before exporting.');
                    return;
                }
                
                const exportData = JSON.stringify(userPreferences);
                const blob = new Blob([exportData], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                
                const a = document.createElement('a');
                a.href = url;
                a.download = 'bdsm-preferences.json';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                
                alert('Your preferences have been exported. Share this file with your partner for comparison.');
            });
            
            // Import preferences
            document.getElementById('importPreferences').addEventListener('click', function() {
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = '.json';
                
                input.addEventListener('change', function() {
                    const file = this.files[0];
                    if (!file) return;
                    
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        try {
                            const partnerPreferences = JSON.parse(e.target.result);
                            comparePreferences(partnerPreferences);
                        } catch (error) {
                            alert('Error reading the file. Please make sure it is a valid preferences file.');
                        }
                    };
                    reader.readAsText(file);
                });
                
                input.click();
            });
            
            // Compare preferences
            function comparePreferences(partnerPreferences) {
                if (Object.keys(userPreferences).length === 0) {
                    alert('Please complete your checklist before comparing.');
                    return;
                }
                
                const matchList = document.getElementById('matchList');
                const potentialList = document.getElementById('potentialList');
                const limitList = document.getElementById('limitList');
                
                matchList.innerHTML = '<h4>Compatible Interests</h4>';
                potentialList.innerHTML = '<h4>Potential Interests</h4>';
                limitList.innerHTML = '<h4>Limits to Discuss</h4>';
                
                let matchCount = 0;
                let potentialCount = 0;
                let limitCount = 0;
                
                // Get all activities
                const allActivities = new Set([
                    ...Object.keys(userPreferences),
                    ...Object.keys(partnerPreferences)
                ]);
                
                allActivities.forEach(activity => {
                    const userPref = userPreferences[activity];
                    const partnerPref = partnerPreferences[activity];
                    
                    if (!userPref || !partnerPref) return;
                    
                    const activityName = document.querySelector(`input[name="${activity}"]`).closest('.activity').querySelector('.activity-name').textContent;
                    
                    if ((userPref === 'love' && partnerPref === 'love') || 
                        (userPref === 'want' && partnerPref === 'want')) {
                        matchList.innerHTML += `<div class="result-item match">${activityName} - Both enthusiastic</div>`;
                        matchCount++;
                    } else if ((userPref === 'love' && (partnerPref === 'want' || partnerPref === 'willing')) || 
                              (userPref === 'want' && partnerPref === 'love') ||
                              (userPref === 'willing' && partnerPref === 'love')) {
                        potentialList.innerHTML += `<div class="result-item potential">${activityName} - High interest alignment</div>`;
                        potentialCount++;
                    } else if (userPref === 'never' || partnerPref === 'never') {
                        limitList.innerHTML += `<div class="result-item limit">${activityName} - One or both have set as never</div>`;
                        limitCount++;
                    } else if ((userPref === 'willing' && partnerPref === 'willing') ||
                              (userPref === 'want' && partnerPref === 'willing') ||
                              (userPref === 'willing' && partnerPref === 'want')) {
                        potentialList.innerHTML += `<div class="result-item potential">${activityName} - Moderate interest alignment</div>`;
                        potentialCount++;
                    }
                });
                
                // Show results
                document.getElementById('comparisonResults').style.display = 'block';
                
                // Add summary
                const summary = document.createElement('div');
                summary.innerHTML = `<p><strong>Summary:</strong> ${matchCount} compatible interests, ${potentialCount} potential interests, ${limitCount} limits to discuss</p>`;
                document.getElementById('comparisonResults').prepend(summary);
            }
        });
    </script>
</body>
</html>
